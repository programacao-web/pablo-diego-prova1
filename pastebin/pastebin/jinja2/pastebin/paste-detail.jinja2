{% extends 'base.jinja2' %}

{% block header %}
  <header>
    <h1 class="paste-header">{{ title }}</h1>
  </header>
{% endblock %}

{% block main %}
  <main class="paste-detail">
    <h2>{{pastebin.title}}</h2>
    <h4>Language: {{pastebin.language}}</h4>
    Code Snippet:
    <pre>
      <code>{{pastebin.code}}</code>
    </pre>
  </main>
{% endblock %}